<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFLab.Views.JobList"
             Title="Jobs">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ListView ItemsSource="{Binding JobsList}"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Profession}" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand"></Label>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
</ContentPage>